<%= semantic_form_for [:public, Question.new] do |f| %>
  <%= f.inputs :name => "inputs" do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :text %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: "Отправить вопрос" %>
  <% end %>
<% end %>