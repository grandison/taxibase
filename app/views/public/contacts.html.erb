<% if @question.new_record? %>
  <%= semantic_form_for [:public, @question] do |f| %>
    <%= f.inputs :name => "inputs" do %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.input :text %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, label: "Отправить вопрос" %>
    <% end %>
  <% end %>
<% else %>
  <h1>Ваш вопрос отправлен</h1>
<% end %>